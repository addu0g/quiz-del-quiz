<form method="get" action="quizes">
	<input type="text" name="search" placeholder="Introduzca texto a buscar"/>
	
	<select name="CategoriumId" id="categorias">
		<option value="0">Seleccione una categor√≠a</option>
		<% var i; for(i=0;i < categoria.length;i++){%>
			<option value=<%= (i+1) %>><%= categoria[i].nombre %></option>
		<% } %>
	</select>
	<input type="submit" value="Buscar"/>
</form>
<br/>
<br/>
<table>
<% var i; for(i=0;i <quizes.length;i++){%>
	<tr>
		<td>
			<a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a>
		</td>
		<%if (session.user ){ %>
		<td>
			<a href="quizes/<%= quizes[i].id %>/edit"><button>editar</button></a>
		</td>
		<td>
			<form method="post" action="quizes/<%= quizes[i].id %>"?_method=delete">
				<button type="submit" onclick="return confirm('Borrar= <%= quizes[i].pregunta %>');">borrar</button>
			</form>
		</td>
		<%}%>
	</tr>
<%}%>
</table><p>
<%if(session.user){%>
	<a href="/quizes/new"><button>Crear pregunta</button></a>
<%}%>
